<!DOCTYPE html>
<html>
    <head>
        <title></title>
        <%- include ('../partials/links') -%>
    </head>

    <body>
        <%- include ('../partials/header') -%>
        <div id="home">
        <form name="form1" id="form1"  method="POST">
        <div class="container" style="margin-top: 5%;" id="section-1">
                <div class="form-group col-md-8 col-lg-8">
                  <label for="name">Name:</label>
                  <input type="text" class="form-control" id="name" placeholder="name" required="">
                </div>

                <div class="form-group col-md-8 col-lg-8">
                  <label for="company_name">Company Name:</label>
                  <input type="text" class="form-control" id="company_name" placeholder="company_name" required="">
                </div>

                <div class="form-group col-md-8 col-lg-8">
                    <label for="company_type">Company Type:</label>
                    <input type="text" class="form-control" id="company_type" placeholder="company_type" required="">
                </div>

                <div class="form-group col-md-8 col-lg-8">
                    <label for="employee_count">Employee Count:</label>
                    <input type="text" class="form-control" id="employee_count" placeholder="employee_count" required="">
                </div>

                <div class="form-group col-md-8 col-lg-8">
                    <label for="company_location">Company Location:</label>
                    <input type="text" class="form-control" id="company_location" placeholder="company_location" required="">
                </div>

                <div class="form-group col-md-8 col-lg-8">
                    <label for="designation">Designation:</label>
                    <input type="text" class="form-control" id="designation" placeholder="designation" required="">
                </div>

                          <button type="submit" id="submit3" class="btn btn-success btn-lg " style="margin-left: 2%;">Submit</button>
                </div>
            </form>
    </div>
    </body>

</html>

<script>
 $(document).ready(function(){
    $('#submit3').click(function(e){
			// alert(result);
            e.preventDefault();
        let name      = $('#name').val();
        let company_name   = $('#company_name').val();
        let company_type = $('#company_type').val();
        let employee_count    = $('#employee_count').val();
        let company_location  = $('#company_location').val();
        let designation = $('#designation').val();
        let url = '/clientUpdate'
        // alert(user_type)
        // alert(url);
        $.post(url,{name:name,company_name:company_name,company_type:company_type,employee_count:employee_count,company_location:company_location,designation:designation}).done(function(data){
					    if(data !== "error"){

                swal({
                                title: data,
                                text: "",
                                icon: "success",
                                }).then(function(){
                                    window.location = '/';
                                });

                // document.getElementById("form1").reset();
              }
              else{
                swal({
                                title: "Failed",
                                text: "",
                                icon: "error",
                                }).then(function(){
                                    window.location = '/';
                                });
                  
              }
            });


        });

 });

</script>